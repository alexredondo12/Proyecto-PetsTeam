<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="680dp"
    android:background="@drawable/bginicio"
    tools:context=".ThirdFragment">


    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="45dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/marco1"
        android:layout_width="342dp"
        android:layout_height="342dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordes_redondos"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/marco2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/marco2"
        app:layout_constraintTop_toBottomOf="@+id/marco2" />

    <TextView
        android:id="@+id/marco2"
        android:layout_width="342dp"
        android:layout_height="116dp"
        android:background="@drawable/bordes_redondos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider5" />

    <ImageButton
        android:id="@+id/b_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintEnd_toEndOf="@+id/textView17"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="2. Nombre:"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/marco1" />

    <EditText
        android:id="@+id/txt_titulo"
        android:layout_width="290dp"
        android:layout_height="43dp"
        android:cursorVisible="false"
        android:ems="10"
        android:hint="Ejemplo: Collar de galgo"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/txt_des"
        android:layout_width="290dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Collar para galgo, muy poco uso...."
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_titulo"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="3. Descripción:"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_titulo"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="4. Talla:"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_des"
        app:layout_constraintTop_toBottomOf="@+id/txt_des" />

    <EditText
        android:id="@+id/txt_talla"
        android:layout_width="105dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Ejemplo: 28cm.."
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:text="5. Precio:"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <EditText
        android:id="@+id/txt_precio"
        android:layout_width="105dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="0,0"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textColor="#040404"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Subir foto:"
        android:textColor="#D3B42C"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/marco2"
        app:layout_constraintEnd_toStartOf="@+id/imag_vista"
        app:layout_constraintStart_toStartOf="@+id/marco2"
        app:layout_constraintTop_toTopOf="@+id/marco2"
        app:layout_constraintVertical_bias="0.301" />

    <Button
        android:id="@+id/b_subir"
        android:layout_width="290dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#DDDDDD"
        android:elevation="5dp"
        android:text="Subir producto"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_des"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/txt_precio"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="17dp"
        android:layout_height="19dp"
        android:text="€"
        app:layout_constraintBottom_toBottomOf="@+id/txt_precio"
        app:layout_constraintStart_toEndOf="@+id/txt_precio"
        app:layout_constraintTop_toTopOf="@+id/txt_precio" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imag_vista"
        android:layout_width="101dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/marco2"
        app:layout_constraintEnd_toEndOf="@+id/marco2"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/marco2"
        app:layout_constraintTop_toTopOf="@+id/marco2"
        app:layout_constraintVertical_bias="0.454"
        app:riv_corner_radius="24dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/bordes_redondos"
        android:src="@drawable/perfil2"
        app:layout_constraintStart_toStartOf="@+id/marco1"
        app:layout_constraintTop_toTopOf="@+id/marco1" />

    <TextView
        android:id="@+id/txtmail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Usuario"
        android:textColor="#000000"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="224dp"
        android:layout_height="86dp"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marco1" />

</androidx.constraintlayout.widget.ConstraintLayout>