<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.proyectofinal">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- permiso para escribir -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- permiso para leer archivos  -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- permiso para la camara -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- permiso para internet -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoFinal">
        <activity
            android:name=".ResetPaswd"
            android:exported="true" />
        <activity
            android:name=".Activity_Responder"
            android:exported="true" />
        <activity
            android:name=".MensajeAdapter"
            android:exported="true" />
        <activity
            android:name=".Buzon"
            android:exported="true" />
        <activity
            android:name=".ProductoPerfilAdapter"
            android:exported="true" />
        <activity
            android:name=".Activity_enviar"
            android:exported="true" />
        <activity
            android:name=".ProductoAdapter"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".Registro"
            android:exported="true" />
        <activity
            android:name=".PaginaPrincipal"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/SpashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>